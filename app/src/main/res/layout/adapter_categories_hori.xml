<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:innerRadius="0dp"
    android:shape="ring"

    app:cardBackgroundColor="@color/trasparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"

    tools:context=".ui.adapter.CategoriesAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#200099FF"
                android:tint="#0F42A5F5"
                android:visibility="visible"
                app:civ_circle_background_color="#39FF9800" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:maxLines="1"
            android:text="Nome categoria Nome categoria Nome categoria Nome categoria"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/appBlue3"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>



